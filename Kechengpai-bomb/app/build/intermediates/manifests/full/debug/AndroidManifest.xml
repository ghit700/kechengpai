<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ketangpai.nan.ketangpai"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="23" />

    <!-- 允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 获取sd卡写的权限，用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允许读取手机状态 用于创建BmobInstallation -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="com.ketangpai.application.kechengpaiApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.ketangpai.activity.SplashAcitvity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ketangpai.activity.LoginActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.ketangpai.activity.MainActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name="com.ketangpai.activity.SearchActivity" />
        <activity android:name="com.ketangpai.activity.CourseActivity" />
        <activity
            android:name="com.ketangpai.activity.ChatActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name="com.ketangpai.activity.NotificationActivity" />
        <activity android:name="com.ketangpai.activity.AccountActivity" />
        <activity android:name="com.ketangpai.activity.AddHomeWorkActivity" />
        <activity android:name="com.ketangpai.activity.AddDataActivity" />
        <activity android:name="com.ketangpai.activity.AddNoticekActivity" />
        <activity android:name="com.ketangpai.activity.NoticeActivity" />
        <activity android:name="com.ketangpai.activity.DataActivity" />
        <activity android:name="com.ketangpai.activity.ContactsActivity" />
        <activity android:name="com.ketangpai.activity.AccountUpdateActivity" />
    </application>

</manifest>