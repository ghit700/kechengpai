<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
                android:padding="10dp"
              android:layout_height="wrap_content">

    <TextView
        android:text="123123123"
        android:id="@+id/data_fileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="121"
        android:layout_marginTop="5dp"
        android:layout_below="@id/data_fileName"
        android:id="@+id/data_fileSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/img_data_clear"
        android:layout_alignTop="@id/data_fileName"
        android:layout_alignParentRight="true"
        android:src="@drawable/abc_ic_clear_material"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
</RelativeLayout>